<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/subjectContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Example of a single subject item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvSubjectName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Môn học"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressLearning"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="70"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_custom" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProgressPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="right"
                    android:text="Hoàn thành: 70%"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pointMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giữa kì: 10đ"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_marginTop="4dp"
                    android:textColor="#757575" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pointLast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuối kì: 10đ"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_marginTop="4dp"
                    android:textColor="#757575" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pointFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tổng: 10đ"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_marginTop="4dp"
                    android:textColor="#757575" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
